@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <div class="text-center mt-3">
                <img src="~/images/logo.png" class="rounded mb-5" alt="imaagen-hospital">
            </div>
            <div class="card">
                <div class="card-header">
                    <p class="h1 fw-bold text-center">Bienvenidos al Sistema de Turnos del Hospital la Misericordia</p>
                </div>
                <div class="card-body">
                    <div class="text-center mt-3">
                        <p class="text-sm-h5" >Si desea solicitar un servicio porfavor presione este botón</p>
                    </div>
                    <div class="d-grid col-8 mx-auto mt-4 mb-4">
                        <a class="btn btn-primary btn-lg" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



